<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.dao.ScheduleJobDao">
    <select id="queryObject" resultType="io.renren.entity.ScheduleJobEntity" >
        select * from schedule_job where job_id = #{value}
    </select>

    <select id="queryList" resultType="com.example.demo.entity.ScheduleJobEntity" >
        select * from schedule_job
        <where>
            <if test="beanName != null and beanName.trim() != ''">
                bean_name like concat('%', #{beanName}, '%')
            </if>
        </where>
        <if test="offset != null and limit != null ">
            limit #{offset}, #{limit}
        </if>
    </select>

    <select id="queryTotal" resultType="int">
        select count(1) from schedule_job
        <where>
            <if test="beanName != null and beanName.trim() != ''">
                bean_name like concat('%', #{beanName}, '%')
            </if>
        </where>
    </select>

</mapper>